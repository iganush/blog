<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>The Modern Blog | Home</title>
  <style>
    :root { --primary-color: #6366f1; }
    body { background-color: #f8fafc; font-family: 'Inter', sans-serif; }
    .blog-card { transition: all 0.3s ease-in-out; border: none; border-radius: 15px; overflow: hidden; }
    .blog-card:hover { transform: translateY(-10px); box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1) !important; }
    .image-container { overflow: hidden; }
    .card-img-top { transition: transform 0.5s ease; height: 220px; object-fit: cover; }
    .blog-card:hover .card-img-top { transform: scale(1.1); }
    .btn-view { background-color: var(--primary-color); color: white; border-radius: 50px; padding: 8px 25px; border: none; }
    .btn-view:hover { background-color: #4f46e5; color: white; }
  </style>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="container mt-5">
    <div class="mb-5">
      <h2 class="fw-bold">Latest <span style="color: var(--primary-color);">Insights</span></h2>
      <p class="text-muted">Explore our latest blog posts and stories.</p>
    </div>

    <div class="row g-4">
      <% if (locals.blogs && blogs.length > 0) { %>
        <% blogs.forEach((blog) => { %>
          <div class="col-lg-4 col-md-6">
            <div class="card h-100 shadow-sm blog-card">
              <div class="image-container">
                <img src="<%= blog.coverImageURL || '/images/default.png' %>" class="card-img-top" alt="Blog image">
              </div>
              <div class="card-body d-flex flex-column p-4">
                <h5 class="card-title fw-bold text-dark"><%= blog.title %></h5>
                <p class="card-text text-muted flex-grow-1">
                  <% if (blog.body) { %>
                    <%= blog.body.substring(0, 100) %>...
                  <% } else { %>
                    No content available.
                  <% } %>
                </p>
                <div class="mt-4">
                  <a href="/blog/<%= blog._id %>" class="btn btn-view w-100">Read Story</a>
                  <% if (locals.user && String(blog.createdBy) === String(user._id)) { %>
                    <form action="/blog/<%= blog._id %>/delete" method="post" class="mt-2" onsubmit="return confirm('Are you sure you want to delete this blog?');">
                      <button type="submit" class="btn btn-outline-danger w-100">Delete</button>
                    </form>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center py-5">
          <h3 class="text-muted">No blogs found!</h3>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
